<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistroJpm</servlet-name>
        <servlet-class>Controlador_jpm.RegistroJpm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validacion</servlet-name>
        <servlet-class>Controlador_jpm.Validacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegProveedores</servlet-name>
        <servlet-class>Controlador_jpm.RegProveedores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegProducto</servlet-name>
        <servlet-class>Controlador_jpm.RegProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegClientes</servlet-name>
        <servlet-class>Controlador_jpm.RegClientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegCompras</servlet-name>
        <servlet-class>Controlador_jpm.RegCompras</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegIngresos</servlet-name>
        <servlet-class>Controlador_jpm.RegIngresos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Egresos</servlet-name>
        <servlet-class>Controlador_jpm.Egresos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroJpm</servlet-name>
        <url-pattern>/Registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validacion</servlet-name>
        <url-pattern>/ValUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegProveedores</servlet-name>
        <url-pattern>/RegProv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegProducto</servlet-name>
        <url-pattern>/producto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegClientes</servlet-name>
        <url-pattern>/Clientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegCompras</servlet-name>
        <url-pattern>/Compras</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegIngresos</servlet-name>
        <url-pattern>/Ingresos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Egresos</servlet-name>
        <url-pattern>/Egresos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
